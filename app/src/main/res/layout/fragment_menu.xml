<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="304dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="172dp"
                    android:background="@color/c88c9bf">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/andre_foto"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="224dp"
                        android:layout_marginBottom="68dp"
                        android:layout_marginTop="40dp"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/c88c9bf" />
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingActionButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/c757575"
                        android:clickable="true"
                        android:src="@android:drawable/arrow_down_float"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true" />

                    <TextView
                        android:id="@+id/nomeNoMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Andre Heladio"
                        android:textSize="14dp"
                        android:fontFamily="@font/roboto"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="12dp"
                        android:textColor="@color/c434343"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"/>
                </RelativeLayout>


                <View
                    android:id="@+id/Divisor1"
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="@color/design_default_color_primary_dark" />



                <Button
                    android:id="@+id/buttonMeuPerfil"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="Meu perfil" />

                <Button
                    android:id="@+id/buttonMeusPets"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="Meus pets" />

                <Button
                    android:id="@+id/buttonFavoritos"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="Favoritos" />

                <Button
                    android:id="@+id/buttonChat"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:text="Chat" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>