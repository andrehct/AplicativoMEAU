<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroAnimalFinalizado">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbarFimCadastroAnimal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="#ffd358"
        android:fontFamily="@font/roboto"
        app:title="Cadastro Animal"
        android:textSize="20pt"
        app:titleTextColor="#434343"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="24dp"
        android:background="#ffd358"
        android:fontFamily="@font/roboto"
        android:text="Meus Pets"
        android:textColor="#434343"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="89dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_toolbarFimCadastroAnimal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="@font/courgette"
        android:text="Eba!"
        android:textColor="#FFD358"
        android:textSize="53dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/id_toolbarCadastroAnimal"
        tools:layout_editor_absoluteX="152dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="96dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="O cadastro do seu pet foi realizado\n com sucesso!"
        android:textColor="#757575"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="263dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="242dp"
        android:gravity="center"
        android:text="Certifique-se que permitiu o envio de\n notificações por push no campo\n privacidade do menu configurações do\n aplicativo. Assim, poderemos te avisar\n assim que alguém interessado entrar\n em contato!"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="347dp" />

</RelativeLayout>